[gd_resource type="ShaderMaterial" load_steps=2 format=2]

[sub_resource type="Shader" id=1]
code = "shader_type spatial;
// blend_mix if its going to be transparant
render_mode blend_mix,cull_back,diffuse_burley,specular_schlick_ggx,ambient_light_disabled;
uniform vec4 albedo : hint_color;
uniform sampler2D texture_albedo : hint_albedo;


void fragment() {
	vec2 base_uv = UV;
	vec4 albedo_tex = texture(texture_albedo,base_uv);
	ALBEDO = albedo.rgb * albedo_tex.rgb;
//	Alpha for transparancy
	ALPHA = albedo.a * albedo_tex.a;
}
"

[resource]
shader = SubResource( 1 )
shader_param/albedo = Color( 0.356863, 0.458824, 0.737255, 0.498039 )
